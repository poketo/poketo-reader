#!/usr/bin/env node

const fs = require('mz/fs');
const hibiscss = require('hibiscss').default;
const kit = require('hibiscss/default');

const styles = hibiscss(
  kit({
    borderRadius: {
      '3': '3px',
      '4': '4px',
      round: '50%',
      pill: '9999px',
    },
    colors: {
      fadedBlack: 'rgba(12, 12, 12, 0.35)',
      white: 'white',
      offwhite: '#fffefc',
      lightGray: '#f0f0f0',
      gray0: '#f2f2f2',
      gray1: '#EBEAE8',
      gray2: '#CFCCC8',
      gray3: '#8F8B83',
      gray4: '#292723',
      black: '#292723',
      coral: '#ff7462',
      blue: '#73d2ff',
      green: '#b2f2bb',
      yellow: '#ffe479',
      purple: '#81a0fc',
    },
    fontSize: {
      9: '9px',
      12: '12px',
      14: '14px',
      16: '16px',
      20: '20px',
      24: '24px',
      36: '36px',
      48: '48px',
    },
    fontFamily: {
      sans:
        '"National", Source Sans Pro, -apple-system, BlinkMacSystemFont, helvetica neue, helvetica, Ubuntu, roboto, noto, segoe ui, arial, sans-serif;',
      mono:
        '"SF Mono", Consolas, "Liberation Mono", Menlo, Courier, monospace',
    },
    fontWeight: {
      normal: 400,
      medium: 500,
    },
    sizes: {
      '8': '8px',
      '12': '12px',
      '16': '16px',
      '36': '36px',
      '50%': '50%',
    },
    maxWidths: {
      500: '500px',
      900: '900px',
    },
  }),
  {
    m: '768px',
  },
);

const outputPath = './src/styles.base.css';

async function writeStyles() {
  await fs.writeFile(outputPath, styles);
  console.log(`Wrote styles to ${outputPath}`);
}

writeStyles().catch(err => {
  console.error(err.message);
  console.error(err.stack);
  process.exit(1);
});
